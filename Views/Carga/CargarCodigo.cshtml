@model PromoDH.Models.Registro
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration
@{
    ViewData["Title"] = "CargarCodigo";
}


@inject IOptions<RecaptchaSettings> RecaptchaSettings;
@using reCAPTCHA.AspNetCore
@using reCAPTCHA.AspNetCore.Versions;
@using Microsoft.Extensions.Options



<!doctype html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Bienvenidos a "A Todo Bagley"</title>

    <meta name="description" content="Bienvenidos al sitio de la promoción A TODO BAGLEY" />
    <meta name="keywords" content="promo galletitas bagley, promo a todo bagley, premio combo cine en casa bagley, premio combo campamento bagley, premio combo paseo bagley, premio combo gamer bagley, premio combo tarde en casa bagley, promo galletitas sonrisas, promo galletitas rumba, promo galletitas promo galletitas chocolinas, promo galletitas opera, promo galletitas surtido bagley, promo galletitas merengadas, promo galletitas amor, promo galletitas mellizas" />
    <meta name="robots" content="index, nofollow" />
    <meta name="Publisher-Email" content="arcor@arcor.com.ar" />
    <meta name="author" content="Promo A TODO BAGLEY | https://www.promobagley.net" />
    <meta name="copyright" content=" ® Copyright Bagley Argentina 2021" />
    <link rel="canonical" href="https://www.promobagley.net" />

    <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,user-scalable=no">
    <link href="~/css/estilos.css" rel="stylesheet" type="text/css" />
    <!--[if lt IE 9]>
    <script type="text/javascript" src="~/scripts/html5shiv.min.js"></script>
    <script type="text/javascript" src="~/scripts/respond.min.js"></script>
    <![endif] -->
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script type="text/javascript" src="~/scripts/jQuery.plugins.js"></script>
    <script type="text/javascript" src="~/scripts/jQuery.js"></script>
    

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-21325046-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'UA-21325046-1');
    </script>


</head>
<body id="int">
    <form asp-action="CargarCodigo">
        <div class="site-container">
            <header>
                <a href="javascript;" class="btn menu-open"><span class="fa fa-navicon"></span>Menú</a>
                <a href="~/Contacto" class="btn contacto"><span class="fa fa-comment"></span>Contacto</a>
            </header>
            <section class="toldo">
                <h1><a href="~/">A Todo Bagley</a></h1>
            </section>
            <main class="conElems">
                <div class="wrapper">
                    <h2>Cargá tus datos</h2>
                    <p class="nota">Registrá la fecha de vencimiento del paquete<br />y participá por increíbles premios</p>
                    <input type="hidden" name="captcha" id="captchaInput" />
                    <div class="textos">
                        <fieldset>
                            <div asp-validation-summary="None" class="text-danger"></div>
                            <ul>
                                <li>
                                    <label asp-for="Nombre">Nombre <em>*</em></label>
                                    <input asp-for="Nombre" />
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </li>
                                <li>
                                    <label asp-for="Apellido">Apellido <em>*</em></label>
                                    <input asp-for="Apellido" />
                                    <span asp-validation-for="Apellido" class="text-danger"></span>
                                </li>
                                <li>
                                    <label asp-for="Dni">D.N.I <em>*</em></label>
                                    <input asp-for="Dni" />
                                    <span asp-validation-for="Dni" class="text-danger"></span>
                                </li>
                                <li>
                                    <label>Fecha de Nacimiento <em>*</em></label>
                                    <input asp-for="fecha_nacimiento" data-date-format="DD-MM-YYYY" placeholder="dd/mm/aaaa" />
                                    <span asp-validation-for="fecha_nacimiento" class="text-danger"></span>
                                </li>
                                <li class="wide">
                                    <label asp-for="Direccion">Domicilio completo <em>*</em></label>
                                    <input asp-for="Direccion" />
                                    <span asp-validation-for="Direccion" class="text-danger"></span>
                                </li>

                                <li>
                                    <label asp-for="Provincia" class="control-lable">Provincia <em>*</em></label>
                                    <select asp-for="Provincia" asp-items="@(new SelectList(@ViewBag.ListofProvincias,"descripcion", "descripcion"))" class="custom-select">
                                        <option value="">Seleccione la provincia</option>
                                    </select>
                                </li>



                                <li>
                                    <label asp-for="Localidad">Ciudad <em>*</em></label>
                                    <input asp-for="Localidad" />
                                    <span asp-validation-for="Localidad" class="text-danger"></span>
                                </li>


                                <li>
                                    <label asp-for="CP">CP <em>*</em></label>
                                    <input asp-for="CP" />
                                    <span asp-validation-for="CP" class="text-danger"></span>
                                </li>

                                <li>
                                    <label asp-for="Telefono">Teléfono <em>*</em></label>
                                    <input asp-for="Telefono" />
                                    <span asp-validation-for="Telefono" class="text-danger"></span>
                                </li>
                                <li class="wide">
                                    <label asp-for="Email">Email <em>*</em></label>
                                    <input asp-for="Email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </li>


                                <li class="cod wide">
                                    <label>C&oacute;digo <em>*</em><br />Carga la fecha de vencimiento y la marca:</label>
                                    <div class="campos">
                                        <input asp-for="dia" maxlength="2" placeholder="DD" autocomplete="nope" />
                                        <input asp-for="mes" maxlength="2" placeholder="MM" autocomplete="nope" />
                                        <input asp-for="anio" maxlength="2" class="last" placeholder="AA" autocomplete="nope" />
                                    </div>
                                </li>

                                <li>
                                    <label asp-for="marca_id" class="control-lable">Seleccion&aacute; una marca</label>
                                    <select asp-for="marca_id" asp-items="@(new SelectList(@ViewBag.ListofMarcas,"id", "nombre"))" class="custom-select">
                                        <option value="">Seleccione la marca</option>
                                    </select>
                                </li>



                                
                                <li class="wide">
                                    <label for="men">Ingres&aacute; el captcha <em>*</em></label>
                                    <!--'TODO: GENERAR CLAVES PARA LOS DISTINTOS DOMINIOS-->
                                    @(Html.Recaptcha<RecaptchaV2Checkbox>(RecaptchaSettings.Value))
                                </li>


                                <li class="wide">
                                    <div class="radio-item">
                                        <label>
                                            Acepto&nbsp;las&nbsp;bases&nbsp;y&nbsp;condiciones de&nbsp;la promoci&oacute;n&nbsp;<em>*</em>
                                            <input asp-for="bases" />
                                            <span class="checkmark"></span>
                                        </label>
                                        <span asp-validation-for="bases" class="text-danger"></span>
                                    </div>
                                    <div class="radio-item">
                                        <label>
                                            Deseo&nbsp;recibir&nbsp;comunicaciones comerciales&nbsp;de&nbsp;Bagley&nbsp;
                                            <input asp-for="recibir_info" />
                                            <span class="checkmark"></span>
                                        </label>
                                    </div>
                                </li>


                                <li class="wide btn">
                                    <input type="submit" value="Enviar" />
                                </li>


                            </ul>
                        </fieldset>
                    </div>
                </div>
            </main>



            <footer>
                <div class="wrapper">
                    <p>
                        SIN OBLIGACIÓN DE COMPRA. VÁLIDA DEL 15/02/2021 AL 15/4/2021. CONSULTA LA INFORMACIÓN EN LAS BASES Y CONDICIONES EN ESTA WEB. INGRESANDO DATOS PERSONALES Y DATOS DEL PRODUCTO PARTICIPÁ POR PREMIOS OFRECIDOS.<br />
                        CONSERVE LOS ENVASES DE PRODUCTOS INGRESADOS.
                    </p>
                </div>
            </footer>

        </div>



        <div id="menu-blocker"></div>
        <div id="menu">
            <nav>
                <a href="javascript;" class="menu-close"><span class="fa fa-times"></span></a>
                <img src="../images/logo-bagley.png" alt="Bagley" class="logo">
                <ul>
                    <li><a href="~/"><span>Home</span></a></li>
                    <li class="sel"><span>Cargá<br />tu código</span></li>
                    <li><a href="~/Bases"><span>Bases<br />y condiciones</span></a></li>
                    <li><a href="~/Premios"><span>Listado<br />de premios</span></a></li>
                    <li><a href="~/FAQs"><span>Preguntas<br />frecuentes</span></a></li>
                    <li><a href="~/Contacto"><span>Contacto</span></a></li>
                </ul>
            </nav>
        </div>
    </form>


    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            alert('@Html.Raw(ViewBag.Message)');

        </script>
    }


</body>
</html>
