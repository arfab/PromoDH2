@model PromoDH.Models.Registro
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration
@{
    ViewData["Title"] = "CargarCodigo";
}
@inject IOptions<RecaptchaSettings> RecaptchaSettings;
@using reCAPTCHA.AspNetCore
@using reCAPTCHA.AspNetCore.Versions;
@using Microsoft.Extensions.Options
<!doctype html>
<html lang="es" class="scroller big">
<head>
<meta http-equiv="Cache-Control" content="no-store" />
<meta http-equiv="Cache-Control" content="no-cache" />
<meta http-equiv="Pragma" content="no-cache" />
<meta http-equiv="expires" content="Fri, 18 Jul 2014 1:00:00 GMT" />
<meta charset="UTF-8">
<title>Bienvenidos a la promo "TopLine Lollapalooza 2023"</title>
<meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,user-scalable=no">
<link href="~/css/estilos.css" rel="stylesheet" type="text/css" />
<!--[if lt IE 9]>
<script type="text/javascript" src="~/scripts/html5shiv.min.js"></script>
<script type="text/javascript" src="~/scripts/respond.min.js"></script>
<![endif] -->
<script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
<script type="text/javascript" src="~/scripts/jQuery.plugins.js"></script>
<script type="text/javascript" src="~/scripts/jQuery.js"></script>
</head>
<body id="int" class="car scroll">
  <form asp-action="CargarCodigo" autocomplete="off">
		<header>
    	<h1><a href="~/">Promo "TopLine Lollapalooza 2023"</a></h1>
  		<a href="javascript;" class="menu-open">Men&uacute;</a>
		</header>
		<div id="menu-blocker"></div>
  <nav id="menu">
    <a href="#" class="menu-close">Cerrar men&uacute;</a>
    <img src="~/images/menu-logo.png" class="logo" />
    <ul>
      <li><a href="~/">Home</a></li>
      <li class="sel">Carg&aacute;<br />tu c&oacute;digo</li>
      <li><a href="~/Bases">Bases<br />y condiciones</a></li>
      <li><a href="~/Premios">Listado<br />de premios</a></li>
      <li><a href="~/FAQs">Preguntas<br />frecuentes</a></li>
      <li><a href="~/Contacto">Contacto</a></li>
    </ul>
  </nav>
  <div class="elems elems-mobile">
    <img src="~/images/mano.png" class="elem1" />
    <img src="~/images/elem-09.gif" class="elem2" />
  </div>
  <div class="elems elems-desktop">
    <img src="~/images/elem-16.gif" class="elem1" />
    <img src="~/images/elem-16-anim.gif" class="elem1_ojos" />
    <img src="~/images/elem-09.gif" class="elem2" />
    <img src="~/images/elem-07.gif" class="elem3" />
    <img src="~/images/mano.png" class="elem4" />
    <img src="~/images/elem-10.gif" class="elem5" />
    <img src="~/images/elem-14.gif" class="elem6 float" />
  </div>

	<main class="conElems">
		<span class="h2"><h2>Cargá los datos<br />para participar</h2></span>
		<input type="hidden" name="captcha" id="captchaInput" />
    <div class="form-box cols2">
			<fieldset>
				<div asp-validation-summary="None" class="text-danger"></div>
				<ul>
					<li>
						<label asp-for="Nombre">Nombre *</label>
						<input asp-for="Nombre" autocomplete="nope"/>
						<span asp-validation-for="Nombre" class="text-danger"></span>
					</li>
					<li>
						<label asp-for="Apellido">Apellido *</label>
						<input asp-for="Apellido" autocomplete="nope"/>
						<span asp-validation-for="Apellido" class="text-danger"></span>
					</li>
					<li>
						<label asp-for="Dni">D.N.I *</label>
						<input asp-for="Dni" autocomplete="nope"/>
						<span asp-validation-for="Dni" class="text-danger"></span>
					</li>
					<li>
						<label asp-for="Email">Email *</label>
						<input asp-for="Email" autocomplete="nope" />
						<span asp-validation-for="Email" class="text-danger"></span>
					</li>
					<li>
						<label>Fecha de Nacimiento *</label>
						<input asp-for="fecha_nacimiento" data-date-format="DD-MM-YYYY" placeholder="dd/mm/aaaa" autocomplete="nope" />
						<span asp-validation-for="fecha_nacimiento" class="text-danger"></span>
					</li>
					<li>
						<label asp-for="Provincia" class="control-lable">Provincia *</label>
						<select asp-for="Provincia" asp-items="@(new SelectList(@ViewBag.ListofProvincias,"descripcion", "descripcion"))" class="custom-select" autocomplete="nope">
							<option value="">Seleccione la provincia</option>
						</select>
						<span asp-validation-for="Provincia" class="text-danger"></span>
					</li>
					<li>
						<label>Fecha de vencimiento (DD-MM-AAAA)<br />/ C&oacute;digo sin oblig. de compra (XX-XX-XXXX) (*)</label>
						<div class="cod">
              <span>L</span>
							<input asp-for="dia" maxlength="2" placeholder="DD" autocomplete="nope" min="1" max="31" />
							<input asp-for="mes" maxlength="2" placeholder="MM" autocomplete="nope" min="1" max="12" />
							<input asp-for="anio" maxlength="4" class="last" placeholder="AAAA" autocomplete="nope" min="1" />
						</div>
					</li>
					<li>
						<label for="men">Captcha (*)</label>
						<!--'TODO: GENERAR CLAVES PARA LOS DISTINTOS DOMINIOS-->
						@(Html.Recaptcha(RecaptchaSettings?.Value, new RecaptchaV2Checkbox{ Language = "es" }))
					</li>
					<li>
						<div class="radio-item">
							<label>Acepto las bases y condiciones<br />de la promoci&oacute;n *
								<input asp-for="bases" />
								<span class="checkmark"></span>
							</label>
							<span asp-validation-for="bases" class="text-danger"></span>
						</div>
						@* <div class="radio-item">
							<label>Deseo&nbsp;recibir&nbsp;comunicaciones comerciales&nbsp;
								<input asp-for="recibir_info" />
								<span class="checkmark"></span>
							</label>
						</div> *@
					</li>
					<li class="btn">
						<input type="submit" value="Enviar" />
					</li>
				</ul>
			</fieldset>
		</div>
  </main>
</form>

@if (ViewBag.Message != null) {
	<script type="text/javascript">
		alert('@Html.Raw(ViewBag.Message)');
	</script>
}
<script type="text/javascript">
	$(window).load(function () {
		$('form').get(0).reset(); //clear form data on page load
	});
</script>
</body>
</html>